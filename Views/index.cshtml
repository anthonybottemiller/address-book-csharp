<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>Address Book</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
  </head>
  <body>
    <div class="jumbotron">
      <h1>Address Book</h1>
      @if (@Model.Count == 0)
      {
        <h3>No contacts exist yet!</h3>
      }
      @foreach (var contact in Model)
      {
        <h3><a href="/contact/@contact.GetId()">@contact.GetName()</a></h3>
      }
      <button type="button"><a href="/contact/new">New Contact</a></button>
      <form action="/contact/clear" method="post">
        <button type="submit">Clear Contacts</button>
      </form>
    </div>
  </body>
</html>