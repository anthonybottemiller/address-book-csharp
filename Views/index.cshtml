<!DOCTYPE html>
<html>
  <head>
    <meta charset='utf-8'>
    <title>Address Book</title>
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
  </head>
  <body>
    <div class="jumbotron">
      <h1>Address Book</h1>
      @if (@Model.Count == 0)
      {
        <h3>No contacts exist yet!</h3>
      }
      <ul>
        @foreach (var contact in Model)
        {
          <li><a href="/contact/@contact.GetId()">@contact.GetName()</a><a href="/contact/@contact.GetId()/delete"><button type="button" class="btn btn-danger">Delete</button></a></li>
        }
      </ul>
      <a href="/contact/new"><button type="button" class="btn btn-success">New Contact</button></a>
      <form action="/contact/clear" method="post">
        <button type="submit" class="btn btn-danger">Clear Contacts</button>
      </form>
    </div>
  </body>
</html>